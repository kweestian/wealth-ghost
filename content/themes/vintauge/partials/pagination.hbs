{{! This is the pagination - it will be output using this markup }}

{{! PAGINATION START }}
<div class="posts-pagination">
    {{#if prev}}
        <a class="prev" href="{{page_url prev}}">&laquo; Newer Posts</a>
    {{/if}}
    {{#if next}}
        <a class="next" href="{{page_url next}}">Older Posts &raquo;</a>
    {{/if}}
</div>
{{! PAGINATION END }}