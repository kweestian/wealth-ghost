<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="{{asset "img/favicon.ico"}}">

    {{! CSS START }}
    <link href="{{asset "css/bootstrap.min.css"}}" rel="stylesheet">
    <link href="{{asset "css/style.css"}}" rel="stylesheet">
    <script src="{{asset "js/jquery.min.js"}}"></script>

    {{! CSS END }}
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>

<body class="{{body_class}}">
  <div class="header-social-media">
    <ul class="header-social-links">
      {{#if @blog.facebook}}
        <li><a href="{{facebook_url}}" title="Share to Facebook" target="_blank"><i class="fa fa-facebook"></i></a></li>
      {{/if}}

        <li><a href="https://www.instagram.com/thewealthblog/" title="Share to Twitter" target="_blank"><i class="fa fa-instagram"></i></a></li>

    </ul>
  </div>

    {{! LOADER START }}
    <div class="loader-wrapper">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>

    {{! LOADER END }}

    {{! HEADER START }}
    {{> "header" }}
    {{! HEADER END }}

    <div class="googlesearch animated slideInDown">
      <script>
        (function() {
          var cx = '001398163824059635020:xrkuwgfktq8';
          var gcse = document.createElement('script');
          gcse.type = 'text/javascript';
          gcse.async = true;
          gcse.src = 'https://cse.google.com/cse.js?cx=' + cx;
          var s = document.getElementsByTagName('script')[0];
          s.parentNode.insertBefore(gcse, s);
        })();
      </script>
      <gcse:search></gcse:search>
    </div>

    {{! HEADER END }}
    {{#is "home"}}
        {{> "carousel" }}
    {{/is}}
    {{! CAROUSEL END }}

    <div class="site-content-wrapper">

        <div class="container">

            {{! Everything else gets inserted here }}
            {{{body}}}

        </div>
    </div>

    {{! FOOTER START }}
        {{> "footer" }}
    {{! FOOTER END }}


    {{! JAVASCRIPT START }}
    <script src="{{asset "js/jquery.min.js"}}"></script>
    <script src="{{asset "js/bootstrap.min.js"}}"></script>
    <script src="{{asset "js/vintauge.js"}}"></script>
    <script id="dsq-count-scr" src="//wealthblog-co.disqus.com/count.js" async></script>
    {{! JAVASCRIPT END }}

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

</body>
</html>
