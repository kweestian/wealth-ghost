{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="main-content-wrapper">
	<section class="main-content clearfix">
		{{#post}}
		<div class="outer-wrap post-full">
			<article id="{{id}}" class="{{post_class}}">
				{{#if image}}
					<div class="featured-media"><img src="{{image}}" alt="Post-image" class="img-responsive"></div>
				{{/if}}
				{{#if featured}}
				<div class="featured-ribbon">
					<i class="fa fa-star"></i>Featured
				</div>
				{{/if}}
				<div class="post-content inner-wrap">
					<header>
						<h1 class="post-title">{{{title}}}</h1>
						<div class="post-meta">{{date format="MMMM DD, YYYY"}}</div>
					</header>
					<div class="post-excerpt">
						{{content}}
					</div>
					<div class="tag-list">
							{{tags separator=""}}
					</div>
					<!-- <hr/> -->
					<footer class="clearfix">
						{{> share}}
					</footer>
				</div>
			</article>
		</div>
		<div class="outer-wrap">
			<div class="inner-wrap">
				{{> about-author}}
			</div>
		</div>
		<div class="outer-wrap">
			<div class="inner-wrap">
				{{> comment}}
			</div>
		</div>
		{{/post}}
	</section>
	<script>
		$(document).ready(function() {
		   $("a[href^=http]").each(function(){
		      var excluded = [
		         // format for whitelist: 'google.com', 'apple.com', 'myawesomeblog.com'
		         // add your excluded domains here
		         ];
		      for(i=0; i<excluded.length; i++) {
		         if(this.href.indexOf(excluded[i]) != -1) {
		            return true;
		         }
		      }
		      if(this.href.indexOf(location.hostname) == -1) {
		           $(this).click(function() { return true; });
		           $(this).attr({
		               target: "_blank",
		               title: "Opens in a new window"
		           });
		           $(this).click();
		      }
		   })
		});
	</script>
</div>
