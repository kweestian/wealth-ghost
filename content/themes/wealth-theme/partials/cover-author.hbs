<section class="intro-wrap">
	<div class="intro intro-tag">
		<div class="inner-wrap">
			<div class="avatar-wrap">
			{{#if author.image}}
				<img src="{{author.image}}" alt="Author image" class="avatar">
				{{else}}
				<img src="{{asset "images/default-user-image.jpg"}}" alt="Author image" class="avatar">
			{{/if}}
			<a href="{{url}}rss/" class="author-rss"><i class="fa fa-rss"></i></a>
			</div>
			<div class="name">{{author.name}}</div>
			<div class="meta-info">
				<span class="post-count"><i class="fa fa-pencil"></i>{{plural pagination.total empty='No posts' singular='% post' plural='% posts'}}</span>
				{{#if author.location}}
				<span class="loaction"><i class="fa fa-home"></i>{{author.location}}</span>
				{{/if}}
				{{#if author.website}}
				<span class="website"><i class="fa fa-globe"></i><a href="{{author.website}}" targer="_BLANK">{{author.website}}</a></span>
				{{/if}}
			</div>
			<div class="bio">{{author.bio}}</div>
		</div>
	</div>
</section>